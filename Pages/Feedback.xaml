<Page x:Class="AutoReview.Pages.Feedback"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoReview.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Feedback">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="27"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" 
                    Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#2C3E50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="10 10 10 0" Grid.ColumnSpan="2">
            <StackPanel>
                <Border Height="40" Background="#e1f6ef" CornerRadius="5">
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,4">
                        <TextBlock 
                            Foreground="#2C3E50" 
                            FontSize="18" 
                            FontWeight="Bold"
                            FontFamily="Montserrat"
                            Margin="0, 5, 0, 0"><Run Language="ru-ru" Text="Отзывы"/></TextBlock>
                    </StackPanel>
                </Border>

                <Border Background="#34495E" Margin="0, 10, 0, 0" Padding="10" CornerRadius="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Width="200" 
                             x:Name="search_tb"
                             Background="White" 
                             BorderThickness="0"
                             FontFamily="Montserrat"
                             Padding="5"
                             FontSize="14"/>
                        <Button Content="Поиск"
                            Click="Search_Click"
                            Background="#e1f6ef" 
                            Foreground="Black"
                            FontFamily="Montserrat"
                            Margin="10, 0, 0, 0"
                            Padding="10, 5"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,10,10,10">
            <Border>
                <DataGrid x:Name="usersList"
                      Background="White"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      BorderThickness="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Отзыв" 
                                        Binding="{Binding Review_Feedback}"
                                        Width="250"/>

                        <DataGridTextColumn Header="Рейтинг отзыва" 
                                        Binding="{Binding Rating_Feedback}" 
                                        Width="150"/>

                        <DataGridTextColumn Header="Дата" 
                                        Binding="{Binding Date_Feedback, StringFormat='{} {0:dd.MM.yyyy}'}" 
                                        Width="100"/>

                        <DataGridTextColumn Header="Пользователь" 
                                        Binding="{Binding User_Id}" 
                                        Width="150"/>

                        <DataGridTextColumn Header="Авто" 
                                        Binding="{Binding Car_Id}" 
                                        Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#34495E" Margin="10, 0, 10, 10" Padding="10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="В меню"
                    Click="BackMenu"
                    Background="AntiqueWhite"
                    FontWeight="Bold"
                    FontFamily="Montserrat"
                    Foreground="#34495E"
                    Padding="10, 5"
                    HorizontalAlignment="Left"
                    Grid.Column="0"/>

                <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Grid.Column="1">
                    <Button Content="Добавить"
                        Click="AddUser"
                        Background="#26a69a" 
                        Foreground="White"
                        FontFamily="Montserrat"
                        Padding="10, 5"
                        Margin="0, 0, 10, 0"/>

                    <Button Content="Редактировать"
                        Click="EditUser"
                        Background="#F39C12"
                        FontFamily="Montserrat"
                        Foreground="White"
                        Padding="10, 5"
                        Margin="0, 0, 10, 0"/>

                    <Button Content="Удалить"
                        Click="DeleteUser"
                        Background="#E74C3C"
                        FontFamily="Montserrat"
                        Foreground="White"
                        Padding="10, 5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
