<Page x:Class="AutoReview.Pages.Authorisation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoReview.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorisation">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="14" 
                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#2C3E50">
        <Border Background="#00000000">
            <StackPanel>
                <Border Height="100" Background="#1A252F" HorizontalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0, 11">
                        <Image Source="/Image/logo.png" Width="100" Height="50"/>
                        <TextBlock Text="Авторизация" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="Bold"
                       FontFamily="Montserrat"
                       Margin="0, 5, 0, 0"/>
                    </StackPanel>
                </Border>

                <StackPanel HorizontalAlignment="Center" Width="Auto" VerticalAlignment="Top">
                    <Label
                        HorizontalAlignment="Left"
                        Content="Логин"
                        Foreground="White"
                        Margin="0,10,10,0"
                        FontSize="18"
                        FontFamily="Montserrat"/>
                    <TextBox
                        Text="dsada"
                        Padding="5"
                        x:Name="tb_login"
                        Width="250"
                        Background="White"
                        FontSize="18"
                        Height="40"/>
                    <Label
                        HorizontalAlignment="Left"
                        Content="Пароль"
                        Foreground="White"
                        Margin="0,10,10,0"
                        FontSize="18"
                        FontFamily="Montserrat"/>
                    <PasswordBox
                        Padding="5"
                        x:Name="tb_password"
                        Width="250"
                        Background="White"
                        FontSize="18"
                        Height="40"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <Button
                        Click="Entry"
                        Width="100"
                        Height="30"
                        Content="Вход"
                        FontFamily="Montserrat"
                        FontWeight="Bold"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        Margin="0, 130, 0, 0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
