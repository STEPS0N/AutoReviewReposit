<Page x:Class="AutoReview.Pages.Owners"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoReview.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Владельцы">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="27"/>
            <Setter Property="Background" Value="Coral"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                        CornerRadius="5" 
                        Background="{TemplateBinding Background}"
                        Opacity="1">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                        Storyboard.TargetName="border"
                                        Storyboard.TargetProperty="Opacity"
                                        To="0.4"
                                        Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                        Storyboard.TargetName="border"
                                        Storyboard.TargetProperty="Opacity"
                                        To="1"
                                        Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#2C3E50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="10 10 10 0" Grid.ColumnSpan="2">
            <StackPanel>
                <Border Height="40" Background="#e1f6ef" CornerRadius="5">
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,4">
                        <TextBlock Text="Владельцы"
                                Foreground="#2C3E50" 
                                FontSize="18" 
                                FontWeight="Bold"
                                FontFamily="Montserrat"
                                Margin="0, 5, 0, 0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,10,10,10">
            <Border>
                <DataGrid x:Name="ownersList"
                          Background="White"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          BorderThickness="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" x:Name="id"
                            Binding="{Binding Id_owner}"
                            Width="50"/>

                        <DataGridTextColumn Header="ФИО" 
                            Binding="{Binding Fio}"
                            Width="200"/>

                        <DataGridTextColumn Header="Email" 
                            Binding="{Binding Owner_Email}"
                            Width="190"/>

                        <DataGridTextColumn Header="Телефон" 
                            Binding="{Binding Phone_number}"
                            Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#34495E" Margin="10, 0, 10, 10" Padding="10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="В меню"
                        Click="BackMenu"
                        IsCancel="True"
                        Background="AntiqueWhite"
                        FontWeight="Bold"
                        FontFamily="Montserrat"
                        Foreground="#34495E"
                        Padding="10, 5"
                        HorizontalAlignment="Left"
                        Grid.Column="0"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Grid.Column="1">
                    <Button Content="Добавить"
                            Click="AddOwner"
                            Background="#26a69a" 
                            Foreground="White"
                            FontFamily="Montserrat"
                            Padding="10, 5"
                            Margin="0, 0, 10, 0"/>

                    <Button Content="Редактировать"
                            Click="EditOwner"
                            Background="#F39C12"
                            FontFamily="Montserrat"
                            Foreground="White"
                            Padding="10, 5"
                            Margin="0, 0, 10, 0"/>

                    <Button Content="Удалить"
                            Click="DeleteOwner"
                            Background="#E74C3C"
                            FontFamily="Montserrat"
                            Foreground="White"
                            Padding="10, 5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
