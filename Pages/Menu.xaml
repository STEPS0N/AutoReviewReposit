<Page x:Class="AutoReview.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoReview.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" MinWidth="800" MinHeight="450"
      Title="Меню">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="14" x:Name="border"
                        Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.4"
                                                Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation
                                                Storyboard.TargetName="border"
                                                Storyboard.TargetProperty="Opacity"
                                                To="1"
                                                Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#2C3E50">
        <Border Background="#00000000" HorizontalAlignment="Stretch">
            <StackPanel>
                <Border Height="100" Background="#1A252F" HorizontalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0, 11">
                        <Image Source="/Image/logo.png" Width="100" Height="50"/>
                        <TextBlock Text="AutoReview" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"
                               FontFamily="Montserrat"
                               Margin="0, 5, 0, 0"/>
                    </StackPanel>
                </Border>

                <StackPanel HorizontalAlignment="Center" Width="Auto" VerticalAlignment="Top">
                    <Button x:Name="btnMain" Content="Автомобили" Margin="0, 20" FontFamily="Montserrat" Height="35"
                        Click="Main_Click" Width="275"/>

                    <Button x:Name="btnManufacturer" Content="Производители" Margin="0, 0, 0, 20" FontFamily="Montserrat" Height="35"
                        Click="Manufacturer_Click"/>

                    <Button x:Name="btnEngine" Content="Двигатели" Margin="0, 0, 0, 20" FontFamily="Montserrat" Height="35"
                        Click="Engine_Click"/>

                    <Button x:Name="btnEquipment" Content="Комплектации" Margin="0, 0, 0, 20" FontFamily="Montserrat" Height="35"
                        Click="Equipment_Click"/>

                    <Button x:Name="btnUsers" Content="Владельцы" Margin="0, 0, 0, 20" FontFamily="Montserrat" Height="35"
                        Click="Owners_Click"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Width="Auto" VerticalAlignment="Bottom">
                    <Button Content="Выход" FontFamily="Montserrat" Height="35"
                         Click="Back" IsCancel="True" Width="70" Background="Red"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
