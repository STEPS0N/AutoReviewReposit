<Page x:Class="AutoReview.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoReview.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Автомобили">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="27"/>
            <Setter Property="Background" Value="Coral"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5" 
                        Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#2C3E50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="10 10 10 0" Grid.ColumnSpan="2">
            <StackPanel>
                <Border Height="40" Background="#e1f6ef" CornerRadius="5">
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,4">
                        <TextBlock Text="Автомобили" 
                                Foreground="#2C3E50" 
                                FontSize="18" 
                                FontWeight="Bold"
                                FontFamily="Montserrat"
                                Margin="0, 5, 0, 0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Margin="10 10 10 0">
            <StackPanel>
                <Border Height="40" Background="#e1f6ef" CornerRadius="5" >
                    <StackPanel HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="10,4" Orientation="Horizontal">
                        <TextBlock Text="Поиск:" 
                                   Foreground="#2C3E50" 
                                   FontSize="18"
                                   FontFamily="Montserrat"
                                   Margin="0, 5, 0, 0"/>
                        <TextBox Width="252"
                                 x:Name="tb_search"
                                 Text="sda"
                                 FontSize="18"
                                 FontFamily="Montserrat"
                                 Height="25"
                                 Margin="10, 4, 0, 0"/>
                        <Button Width="87"
                                Content="Поиск"
                                IsDefault="True"
                                Click="btn_Search"
                                FontSize="18"
                                FontFamily="Montserrat"
                                Foreground="White"
                                Height="25"
                                Margin="10, 4, 0, 0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Border>
                <DataGrid x:Name="carsList"
                  Background="White"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  BorderThickness="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" x:Name="id"
                                    Binding="{Binding Id_Car}"
                                    Width="50"/>
                        
                        <DataGridTextColumn Header="Марка" 
                                    Binding="{Binding Manufacturer.Title_Brand}"
                                    Width="150"/>

                        <DataGridTextColumn Header="Модель" 
                                    Binding="{Binding Model_Car}" 
                                    Width="200"/>

                        <DataGridTextColumn Header="Год" 
                                    Binding="{Binding Year_Release}" 
                                    Width="100"/>

                        <DataGridTextColumn Header="Тип кузова" 
                                    Binding="{Binding Body_Type}" 
                                    Width="150"/>

                        <DataGridTextColumn Header="Двигатель"
                                    Binding="{Binding Engine.Type_Engine}" 
                                    Width="150"/>

                        <DataGridTextColumn Header="Цена" 
                                    Binding="{Binding Price_Car, StringFormat='{}₽{0:N0}'}" 
                                    Width="155"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </ScrollViewer>

        <Border Grid.Row="3" Background="#34495E" Margin="10, 0, 10, 10" Padding="10" CornerRadius="5" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="В меню"
                    Click="BackMenu"
                    Background="AntiqueWhite"
                    FontWeight="Bold"
                    FontFamily="Montserrat"
                    Foreground="#34495E"
                    Padding="10, 5"
                    HorizontalAlignment="Left"
                    Grid.Column="0"/>

                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Grid.Column="1">
                    <Button Content="Добавить"
                    Click="AddCar"
                    Background="#26a69a" 
                    Foreground="White"
                    FontFamily="Montserrat"
                    Padding="10, 5"
                    Margin="0, 0, 10, 0"/>

                    <Button Content="Редактировать"
                    Click="EditCar"
                    Background="#F39C12"
                    FontFamily="Montserrat"
                    Foreground="White"
                    Padding="10, 5"
                    Margin="0, 0, 10, 0"/>

                    <Button Content="Удалить"
                    Click="DeleteCar"
                    Background="#E74C3C"
                    FontFamily="Montserrat"
                    Foreground="White"
                    Padding="10, 5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
