<UserControl x:Class="AutoReview.Elements.CarEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoReview.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="427.309">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>

    <Border Background="#34495E" CornerRadius="10" Padding="20">
        <StackPanel>
            <TextBlock Text="Производитель:" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="ManufacturerBox" DisplayMemberPath="Title_Brand"
                     SelectedValuePath="Id_Manufacturer" Margin="0,0,0,10"/>

            <TextBlock Text="Модель:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="ModelBox" Margin="0,0,0,10"/>

            <TextBlock Text="Год выпуска:" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="YearBox" Margin="0,0,0,10"/>

            <TextBlock Text="Тип кузова:" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="BodyTypeBox" Margin="0,0,0,10">
                <ComboBoxItem>Седан</ComboBoxItem>
                <ComboBoxItem>Хэтчбек</ComboBoxItem>
                <ComboBoxItem>Внедорожник</ComboBoxItem>
                <ComboBoxItem>Кроссовер</ComboBoxItem>
                <ComboBoxItem>Купе</ComboBoxItem>
                <ComboBoxItem>Универсал</ComboBoxItem>
                <ComboBoxItem>Минивэн</ComboBoxItem>
                <ComboBoxItem>Спорткар</ComboBoxItem>
                <ComboBoxItem>Болид</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Двигатель:" Foreground="White" Margin="0,0,0,5"/>
            <ComboBox x:Name="EngineBox" DisplayMemberPath="Type_Engine"
                     SelectedValuePath="Id_Engine" Margin="0,0,0,10"/>

            <TextBlock Text="Цена (₽):" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="PriceBox" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Сохранить" Click="SaveButton_Click" 
                        Background="#27AE60" Foreground="White" 
                        Width="100" Height="30" Margin="5"/>
                <Button Content="Отмена" Click="CancelButton_Click" 
                        Background="#E74C3C" Foreground="White" 
                        Width="100" Height="30" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
